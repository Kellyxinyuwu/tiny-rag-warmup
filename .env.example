# Copy to .env and fill in your values
# cp .env.example .env

# API key for /ask endpoint (leave empty to disable auth in dev)
API_KEY=

# Hugging Face (for faster model downloads)
HF_TOKEN=your-hf-token-here

# PostgreSQL + pgvector
# Local (macOS/Homebrew): postgresql://USERNAME@localhost:5432/rag_db
# Docker Compose: postgresql://postgres:postgres@localhost:5433/rag_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_db
